<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‹"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:layout_width="157dp"
                android:layout_height="59dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/tilStyle"
            android:background="@drawable/rounded_button"
            android:layout_width="320dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:layout_marginRight="7dp"
            android:hint="   Search for Books..."
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/green">

            <EditText
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:columnCount="3"
                android:rowCount="1"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/romance"
                    style="@style/category"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/grey"
                    android:text="Romance"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/history"
                    style="@style/category"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/grey"
                    android:text="History"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/fantasy"
                    style="@style/category"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/grey"
                    android:text="Fantasy"
                    android:textAllCaps="false" />


            </GridLayout>

            <GridLayout
                style="@style/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="75dp"
                android:columnCount="3"
                android:rowCount="1"
                android:useDefaultMargins="false">

                <Button
                    android:id="@+id/adventure"
                    style="@style/category"
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/grey"
                    android:text="Adventure"
                    android:textAllCaps="false" />

                <Button
                    style="@style/category"
                    android:layout_width="108dp"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/grey"
                    android:text="Comics"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/classic"
                    style="@style/category"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/grey"
                    android:text="Classic"
                    android:textAllCaps="false" />

            </GridLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/newComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Popular"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="View All"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:onClick="onClick"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                tools:itemCount="1"
                tools:listitem="@layout/row_popular" />

        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/row_recommendations" />




    </LinearLayout>



</androidx.core.widget.NestedScrollView>